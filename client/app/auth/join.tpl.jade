.middle-box.text-center.loginscreen.animated.fadeInDown
  div
    h1.logo-name Ev
  h3 Register to EveMt.
  p Create account to make in yours.
  form#join.text-left.m-t
    if errorMessages
      .alert.alert-danger.alert-dismissable
        button(aria-hidden="true" data-dismiss="alert" class="close" type="button") Ã—
        each errorMessages
          | {{this}}<br/>
    .form-group
      input.form-control(type='email', name='email', placeholder='Email', required='')
    .form-group
      input.form-control(type='password', name='password' placeholder='Password', required='')
    .form-group
      input.form-control(type='password', name='confirm', placeholder='Confirm Password', required='')
    button.btn.btn-primary.block.full-width.m-b(type='submit') Register
    p.text-muted.text-center
      small Already have an account?
    a.btn.btn-sm.btn-white.btn-block(href="{{pathFor 'signin'}}") Login
  p.m-t
    small EveMt &copy; 2016
