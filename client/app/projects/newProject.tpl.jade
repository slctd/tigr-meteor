.ibox
  .ibox-title
    h5 Add new Project
    .ibox-tools
      a.js-collapse-link
        i.fa.fa-chevron-up
      a.js-close-new(title='Close')
        i.fa.fa-times
  .ibox-content
    form.js-new-form(role="form")
      .row
        .form-group.col-sm-12
          label.name-label.control-label Name
          .input-group
            input.form-control(type='text', name='name', value='{{name}}', placeholder='Project Name', required)
            .input-group-btn
              button.btn.btn-white.dropdown-toggle(data-toggle="dropdown" type="button")
                if status
                  span(class='{{statusClass}}') {{statusLabel}}
                else
                  | Status
                span.caret
              ul.dropdown-menu
                li
                  a.js-status-switch(href="#" data-status="new")
                    i.fa.fa-circle(class="color-info")
                    | New
                li
                  a.js-status-switch(href="#" data-status="active")
                    i.fa.fa-circle(class="color-primary")
                    | Active
                li.devider
                li
                  a.js-status-switch(href="#" data-status="pending")
                    i.fa.fa-circle(class="color-warning")
                    | Pending
        .form-group.col-sm-12
          label.control-label About
          input.form-control(type='text', name='about', value='{{about}}', placeholder='About Project')
        .form-group.col-sm-12
          label.control-label Description
          textarea.form-control(type='text', name='description', placeholder='Project Description') {{description}}
        .form-group.col-sm-12
          .col-sm-4.col-sm-offset-2
            button.btn.btn-default.js-close-new Cancel
          .col-sm-4
            button.btn.btn-primary.js-save(type="submit") Submit