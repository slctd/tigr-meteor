.row.wrapper.border-bottom.white-bg.page-heading
  .col-lg-7.pull-left
    +pageTitle title=title category=category
if todosReady
  .wrapper.wrapper-content.animated.fadeInDown
    .row
      .col-lg-6
        .ibox.float-e-margins
          .ibox-title
            if editing
              form.col-xs-6.js-edit-form.list-edit-form
                .form-group
                  input.no-margins(type='text', name='name', value='{{name}}')
                  a.js-cancel(href='#')
                    span.fa.fa-times.js-cancel(title='Cancel')
            else
              h5
                span.privacy
                  if userId
                    i.fa.fa-lock
                  else
                    i.fa.fa-globe
                span.title-wrapper {{name}}
                span.badge.badge-primary.count-list {{incompleteCount}}
            +taskListMenu
          .ibox-content
            form.js-todo-new
              .col-md-12
              .input-group
                input.input-sm.form-control(type='text', placeholder='Type to add new tasks')
                span.input-group-btn
                  button.btn.btn-sm.btn-primary(type='submit')
                    i.fa.fa-plus.js-todo-add
                    | Add task
            with _id
              ul.todo-list.m-t.small-list
                each todos this
                  +task
                else
                  .wrapper-message
                    .title-message No tasks here
                    .subtitle-message Add new tasks using the field above
else
  .spinner.m-b.m-t
    .sk-spinner.sk-spinner-wandering-cubes
      .sk-cube1
      .sk-cube2