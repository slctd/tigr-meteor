.row.wrapper.border-bottom.white-bg.page-heading
  .col-lg-7.pull-left
    +pageTitle title="Products Grid" category="Products"
  .col-lg-5.text-right.m-t
    button.btn.btn-success.js-new-product
      i.fa.fa-plus
      span {{_ 'products.create'}}

.wrapper.wrapper-content.animated.fadeInRight
  if productsReady
    .wrapper.wrapper-content.animated.fadeInRight
      +productsGrid
  else
    .spinner.m-b.m-t
      .sk-spinner.sk-spinner-wandering-cubes
        .sk-cube1
        .sk-cube2